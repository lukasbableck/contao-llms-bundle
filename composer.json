{
    "name": "lukasbableck/contao-llms-bundle",
    "type": "contao-bundle",
	"description": "This bundle allows you to generate a llms.txt file via the Contao backend to optimize your site for LLMs like ChatGPT, Claude, Gemini, ...",
	"keywords": [
		"llm",
		"chatgpt",
		"ai",
		"ki",
		"geo",
		"optimization",
		"contao"
	],
    "license": "LGPL-3.0-or-later",
	"authors": [
		{
			"name": "Lukas Bableck",
			"email": "lukas@bableck.dev",
			"homepage": "https://bableck.dev"
		}
	],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "mvo/contao-group-widget": "^1.5",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/http-foundation": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/security-core": "^6.4 || ^7.0"
    },
	"conflict": {
		"contao/manager-plugin": "<2.0 || >=3.0"
	},
	"require-dev": {
		"contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.84",
        "vincentlanglet/twig-cs-fixer": "^3.8"
	},
    "autoload": {
        "psr-4": {
            "Lukasbableck\\ContaoLlmsBundle\\": "src/"
        }
    },
	"extra": {
		"contao-manager-plugin": "Lukasbableck\\ContaoLlmsBundle\\ContaoManager\\Plugin"
	}
}
